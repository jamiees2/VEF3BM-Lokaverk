body {
	padding-bottom: 150px
}

.form {
  width: 500px
  margin: auto
}

.resume-modal h2{
	font-size: 1.4em !important
}
.resume-modal h3{
	font-size: 1.3em !important
}
.resume-modal h4{
	font-size: 1.2em !important
}

.application {
	margin-top: 20px;
}

.heading {
	margin-top: -20px;
	position: relative;
	img {
		position: absolute;
		max-width: 100%;
	}
	.text {
		position: absolute;
		z-index: 100;
		color: white !important;
		top: 0; right: 0; left: 0; bottom: 0;
		margin: auto;
		width: 36em;
		text-align: center;
		h1 {
			font-weight: 300;
		}
		h2 {
			font-weight: 300;
		}
		a.btn {
			padding: 10px 25px;
			border-radius: 1px;
			background-color: transparent;
			border: 2px solid white;
			&:hover {
				background-color: white;
				color: #111;
			}
		}
	}
}
