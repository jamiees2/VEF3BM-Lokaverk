extends layout

block content

  .container
    form.form(action="/signup" method="post")
      if (message.length > 0)
        .error= message
      h2 Please Sign Up
      .form-group
        input.form-control(type="email" name="email" placeholder="Email address" required="" autofocus="")
      .form-group
        input.form-control(type="password" name="password" placeholder="Password" required="")

      button.btn.btn-lg.btn-primary.btn-block(type="submit") Sign Up